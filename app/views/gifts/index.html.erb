<style>
  .button {
    margin-bottom: 20px;
  }

  .gift-row {
    margin-bottom: 16px;
    display: flex;
    gap: 20px;
    align-items: end;
  }
</style>
<% content_for :title, "Gifts" %>
<section>
  <p style="color: green"><%= notice %></p>
  <h1>Gifts</h1>
  <%= link_to "New gift", new_gift_path, class: "button" %>
  <div id="gifts">
    <% @gifts.each do |gift| %>
      <div class="gift-row">
        <%= render gift %>
      </div>
    <% end %>
  </div>
</section>
