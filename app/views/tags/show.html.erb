<style>
  .button, .spacer {
    margin-top: 20px;
  }
</style>
<section>
  <p style="color: green"><%= notice %></p>
  <%= link_to "Back to tags", tags_path %>
  <div class="spacer">
    <%= render @tag %>
  </div>
  <div>
    <%= link_to "Edit this tag", edit_tag_path(@tag), class: "button" %>
    <%= button_to "Destroy this tag", @tag, method: :delete, class: "button" %>
  </div>
</section>
